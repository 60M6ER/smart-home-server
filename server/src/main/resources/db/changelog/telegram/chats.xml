<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="chats-1" author="larionov">
        <preConditions>
            <not>
                <tableExists tableName="chats"/>
            </not>
        </preConditions>

        <createTable tableName="chats">
            <column name="id" type="int8">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="type_chat" type="int">
            </column>

        </createTable>
    </changeSet>

    <changeSet id="chats-2" author="larionov">
        <addPrimaryKey tableName="chats" columnNames="id" constraintName="chat.pk"/>
    </changeSet>

</databaseChangeLog>