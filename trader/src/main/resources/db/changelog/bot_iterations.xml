<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="bot_iterations-1" author="larionov">
        <preConditions>
            <not>
                <tableExists tableName="bot_iterations"/>
            </not>
        </preConditions>

        <createTable tableName="bot_iterations">

            <column name="id" type="uuid">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="iteration_id" type="uuid">
                <constraints unique="true" nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey tableName="bot_iterations" columnNames="id" constraintName="bot_iteration.pk"/>
    </changeSet>

</databaseChangeLog>